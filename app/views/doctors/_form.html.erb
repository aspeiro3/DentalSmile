<%= form_for @doctor, html: { multipart: true } do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @doctor} %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :avatar %>
    <p><%= image_tag(@doctor.avatar.thumb.url) if @doctor.avatar? %></p>
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %> или <%= link_to 'вернуться', :back %>
  </div>
<% end %>
