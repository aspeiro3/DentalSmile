<div class="container pl-0 pr-0 d-flex justify-content-center">
  <div class="col-md-8 col-lg-6 col-xl-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="p-0 border rounded p-3 shadow background-color">
        <h2 class="text-center">Авторизация</h2>
        <form>
          <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="form-group">
            <label for="exampleInputPassword1">Пароль</label>
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <label for="exampleInputPassword1">Запомнить пароль</label>
            </div>
          <% end %>

          <button type="submit" class="btn btn-primary">Войти</button><br/>
        </form>

        <div class="mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
