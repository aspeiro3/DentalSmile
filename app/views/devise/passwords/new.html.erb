<div class="container pl-0 pr-0 d-flex justify-content-center">
  <div class="col-md-8 col-lg-6 col-xl-5">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="p-0 border rounded p-3 shadow background-color">
        <h2 class="text-center">Забыли пароль?</h2>
        <form>
          <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <button type="submit" class="btn btn-primary">Отправить инструкцию по сбросу пароля</button>
        </form>

        <div class="mt-4">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
